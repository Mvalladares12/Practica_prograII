@model Ventas_MVC.Models.Autos
@{
    ViewBag.Title = "datos_modelo";
}

<h2>Datos del auto</h2>

<h3 class="lead"> <span class="font-weight-bold"> Codigo: </span> @Model.Codigo</h3>
<h3 class="lead"> <span class="font-weight-bold"> Marca: </span> @Model.Marca</h3>
<h3 class="lead"> <span class="font-weight-bold"> Modelo: </span> @Model.Modelo</h3>
<h3 class="lead"> <span class="font-weight-bold"> Año: </span> @Model.anio</h3>
<h3 class="lead"> <span class="font-weight-bold"> Fecha: </span> @Model.FechaAuto</h3>
<h3 class="lead"> <span class="font-weight-bold"> Color: </span> @Model.Color</h3>
<h3 class="lead"> <span class="font-weight-bold"> Observaciones: </span> @Model.Observaciones</h3>
<h3 class="lead"> <span class="font-weight-bold"> ¿Nuevo?: </span> @Model.Nuevo</h3>